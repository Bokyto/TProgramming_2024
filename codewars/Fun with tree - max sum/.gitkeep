class TreeNode:
    def a(self, value, left=None, right=None):
        self.value = value
        self.left = left
        self.right = right

def max_sum(root):
    if root is None:
        return 0
    def helper(node):
        if node is None:
            return float('-inf')  
        if node.left is None and node.right is None:
            return node.value
        left_sum = helper(node.left)
        right_sum = helper(node.right)
        return node.value + max(left_sum, right_sum)

    return helper(root)